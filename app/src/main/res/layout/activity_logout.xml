<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garden">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logo"
        app:layout_constraintDimensionRatio="1.5:1"
        app:layout_constraintBottom_toTopOf="@+id/glH363"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/glH02" />

    <View
        android:id="@+id/mvlogout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gb_rounded_rect"
        app:layout_constraintBottom_toTopOf="@+id/glH66"
        app:layout_constraintDimensionRatio="1.5:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/glH389" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/poppins"
        android:shadowColor="@color/MShader"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:shadowRadius="10"
        android:text="Are you sure you want to log out?"
        android:textAlignment="center"
        android:textColor="#F3F9EB"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/glH52"
        app:layout_constraintEnd_toEndOf="@+id/mvlogout"
        app:layout_constraintStart_toStartOf="@+id/mvlogout"
        app:layout_constraintTop_toTopOf="@+id/glH428" />

    <views.MButton
        android:id="@+id/btnYes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/done"
        android:fontFamily="@font/poppins"
        app:layout_constraintDimensionRatio="2:1"
        android:gravity="center"
        android:text="Yes"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:backColor="@color/MYellow"
        app:cornerRadius="50dp"
        app:fontWeight="1"
        app:layout_constraintBottom_toTopOf="@+id/glH64"
        app:layout_constraintEnd_toStartOf="@+id/glV5"
        app:layout_constraintStart_toStartOf="@+id/mvlogout"
        app:layout_constraintTop_toTopOf="@+id/glH54"
        app:shadowColor="@color/MDarkPurple"
        app:shadowRadius="10dp" />

    <views.MButton
        android:id="@+id/btnNo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/done"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        app:layout_constraintDimensionRatio="2:1"
        android:text="No"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:backColor="@color/MOrange"
        app:cornerRadius="50dp"
        app:fontWeight="1"
        app:layout_constraintBottom_toTopOf="@+id/glH64"
        app:layout_constraintEnd_toEndOf="@+id/mvlogout"
        app:layout_constraintStart_toStartOf="@+id/glV5"
        app:layout_constraintTop_toTopOf="@+id/glH54"
        app:shadowColor="@color/MDarkPurple"
        app:shadowRadius="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glV5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glH02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glH363"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.363" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glH389"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.389" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glH66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glH54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glH64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glH428"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.428" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glH52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />
</androidx.constraintlayout.widget.ConstraintLayout>