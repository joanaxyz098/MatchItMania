    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/MView"
        android:layout_width="315dp"
        android:layout_height="236dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/gb_rounded_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"  />

    <TextView
        android:id="@+id/textView"
        android:layout_width="234dp"
        android:layout_height="68dp"
        android:layout_marginTop="28dp"
        android:text="Are you sure you want to log out?"
        android:textColor="#F3F9EB"
        android:shadowRadius="10"
        android:shadowColor="@color/MShader"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@+id/MView"
        app:layout_constraintStart_toStartOf="@+id/MView"
        app:layout_constraintTop_toTopOf="@+id/MView" />

    <views.MButton
        android:id="@+id/btnYes"
        android:layout_width="125dp"
        android:layout_height="74dp"
        android:layout_marginBottom="220dp"
        android:layout_marginRight="140dp"
        android:contentDescription="@string/done"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Yes"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:backColor="@color/MYellow"
        app:cornerRadius="50dp"
        app:fontWeight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shadowColor="@color/MDarkPurple"
        app:shadowRadius="10dp"/>

    <views.MButton
        android:id="@+id/btnNo"
        android:layout_width="125dp"
        android:layout_height="74dp"
        android:layout_marginBottom="220dp"
        android:layout_marginLeft="140dp"
        android:contentDescription="@string/done"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="No"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:backColor="@color/MOrange"
        app:cornerRadius="50dp"
        app:fontWeight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shadowColor="@color/MDarkPurple"
        app:shadowRadius="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>