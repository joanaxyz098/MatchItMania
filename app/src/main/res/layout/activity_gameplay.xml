    android:background="@drawable/home2">


<!-- To do: please design gameplay ang choose level -->
    <androidx.cardview.widget.CardView
        android:id="@+id/levelNameCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/glH8"
        app:layout_constraintEnd_toEndOf="@id/glV5785"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/glV5715"
        app:layout_constraintTop_toBottomOf="@+id/glH06"
        app:layout_constraintVertical_bias="0.0"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/level_card">

            <TextView
                android:id="@+id/tvLevelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Level 1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>


    <views.MButton
        android:id="@+id/btnSettings"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/settings_button"
        app:backColor="#00000000"
        app:cornerRadius="10dp"
        app:imageBackground="@drawable/settings"
        app:layout_constraintBottom_toTopOf="@+id/glH19"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/glV5796"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/glV5777"
        app:layout_constraintTop_toBottomOf="@+id/glH06"
        app:layout_constraintVertical_bias="0.0"/>

    <LinearLayout
        android:id="@+id/editContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/game_bg"
        app:layout_constraintTop_toBottomOf="@id/glH37"
        app:layout_constraintBottom_toTopOf="@id/glH8"
        app:layout_constraintStart_toStartOf="@id/glV571"
        app:layout_constraintEnd_toStartOf="@id/glV579"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:padding="16dp">

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="160dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/back_purple" />
        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="160dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/back_purple" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/magicalBarContainer"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="568dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="@id/glV5785"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/glV5715"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/timerView"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:background="@drawable/timer_bar" />

    </FrameLayout>

